	"item": [
		{
			"name": "用户查看",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"\r",
							"   // 状态码验证\r",
							"   pm.test(\"响应状态码为200\", function () {\r",
							"     pm.response.to.have.status(200);\r",
							"   });\r",
							"\r",
							"   // 响应时间验证\r",
							"   pm.test(\"响应时间小于500ms\", function () {\r",
							"     pm.expect(pm.response.responseTime).to.be.below(500);\r",
							"   });\r",
							"\r",
							"   // 响应格式验证\r",
							"   pm.test(\"返回JSON格式数据\", function () {\r",
							"     pm.response.to.be.json;\r",
							"   });\r",
							"\r",
							"   // 响应内容验证\r",
							"   pm.test(\"包含用户列表数据\", function () {\r",
							"     var jsonData = pm.response.json();\r",
							"     pm.expect(jsonData).to.have.property(\"users\");\r",
							"     pm.expect(jsonData.users).to.be.an(\"array\");\r",
							"     pm.expect(jsonData.users.length).to.be.at.least(1);\r",
							"   });"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [],
				"body": {
